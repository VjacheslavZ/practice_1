{
  "name": "node-typescript-template",
  "version": "1.0.0",
  "description": "A Node.js and TypeScript template project",
  "scripts": {
    "t1_dev_func": "ts-node-dev --respawn --transpile-only --no-notify ./src/task_1/func/ & tsc --noEmit --watch --preserveWatchOutput",
    "t1_test_func": "ts-node-dev --respawn --transpile-only --no-notify ./src/task_1/func/index.test.js & tsc --noEmit --watch --preserveWatchOutput",
    "t1_dev_procedural": "ts-node-dev --respawn --transpile-only --no-notify ./src/task_1/proc/ & tsc --noEmit --watch --preserveWatchOutput",
    "t1_test_procedural": "ts-node-dev --respawn --transpile-only --no-notify ./src/task_1/proc/index.test.js & tsc --noEmit --watch --preserveWatchOutput",
    "t1_dev_oop": "ts-node-dev --respawn --transpile-only --no-notify ./src/task_1/oop/ & tsc --noEmit --watch --preserveWatchOutput",
    "t1_test_oop": "ts-node-dev --respawn --transpile-only --no-notify ./src/task_1/oop/index.test.ts & tsc --noEmit --watch --preserveWatchOutput",
    "t2_dev_oop": "ts-node-dev --respawn --transpile-only --no-notify ./src/task_2/oop/ & tsc --noEmit --watch --preserveWatchOutput",
    "t2_test_oop": "ts-node-dev --respawn --transpile-only --no-notify ./src/task_2/oop/index.test.js & tsc --noEmit --watch --preserveWatchOutput",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "format": "prettier --write \"src/**/*.{js,ts,json}\"",
    "lint": "eslint \"src/**/*.{js,ts}\"",
    "lint:fix": "eslint \"src/**/*.{js,ts}\" --fix"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
